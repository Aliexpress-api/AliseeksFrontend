@{ 
    Layout = "_Layout";
    var routeData = ViewContext.RouteData.Values;
}

@model AccountOverview

<div class="row profile">
    <div class="col-md-3">
        <div class="well profile-nav">
            <h4>@Model.User.Username</h4>
            <p class="text-muted">User Profile</p>
            <hr />
            <div class="list-group">
                <a href="/account" class="list-group-item @(routeData["Action"].ToString() == "Index" ? "active" : "")">Overview</a>
                <a href="/account/searches" class="list-group-item @(routeData["Action"].ToString() == "searches" ? "active" : "")">Saved Searches</a>
                <a href="/account" class="list-group-item disabled">Tracking Items (Coming soon)</a>
                <a href="/dropship" class="list-group-item @(routeData["Action"].ToString() == "Dropship" ? "active" : "")">Dropshipping</a>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="well profile-info">
            @RenderBody()
        </div>
    </div>
</div>

