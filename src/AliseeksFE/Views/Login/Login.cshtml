@model LoginUserModel

<div class="col-sm-6 col-md-2 col-center">
    <form asp-controller="Login" asp-action="Login" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="control-label">Username</label>
            <input type="text" asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Password</label>
            <input type="text" asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <p>No account? <a href="/register">Click here</a> to register!</p>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>