@model LoginUserModel

<div class="row">
    <div class="col-sm-6 col-md-2 col-center text-center">
        <h3 class="text-center">Login</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-10 col-sm-6 col-md-2 col-center col-center">
        <form asp-controller="Login" asp-action="Login" method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Username</label>
                <input type="text" asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <p>No account? <a href="/register">Click here</a> to register!</p>
                <p><a href="/passwordreset">Forgot your password?</a></p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>