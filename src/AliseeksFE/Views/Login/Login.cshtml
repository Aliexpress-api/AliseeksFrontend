@model LoginUserModel

<div class="account-background-image col-lg-12"></div>
<div class="account-form col-sm-8 col-md-4 col-center">
    <div class="row">
        <div class="col-sm-10 col-md-10 col-center text-center">
            <h3 class="text-center">Login</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 col-md-10 col-center">
            <form asp-controller="Login" asp-action="Login" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input type="text" asp-for="Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <p>No account? <a href="/register">Click here</a> to register!</p>
                    <p><a href="/passwordreset">Forgot your password?</a></p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>