@model ResetUserModel

@{
    ViewBag.Title = "Reset Password - Aliseeks";
}


<div class="row">
    <div class="col-sm-6 col-md-3 col-center">
        <h3>Password Reset</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-2 col-center">
        <form asp-controller="Login" asp-action="PasswordReset" method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>