    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2>Register an account:</h2>
            </div>
            <div class="col-lg-6">
                <ul class="list-inline banner-social-buttons">
                    <li>
                        <a href="/register" class="btn btn-default btn-lg"><span class="network-name">Register</span></a>
                    </li>
                    <li>
                        <a href="/register" class="btn btn-default btn-lg"><span class="network-name">Feedback</span></a>
